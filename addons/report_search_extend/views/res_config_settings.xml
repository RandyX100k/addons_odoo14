<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="report_search_extend_settings" model="ir.ui.view">
        <field name="name">report.search.extend.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Búsqueda" string="Búsqueda">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="search_native"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="search_native"/>
                                <div class="text-muted">
                                    Al activarlo, Odoo usará la búsqueda nativa
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

</odoo>
