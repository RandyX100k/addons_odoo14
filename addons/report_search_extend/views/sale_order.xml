<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_line_button_details" model="ir.ui.view">
        <field name="name">sale.order.line.button.details</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/form" position="inside">
                <field name="display_detail_widget" invisible="1" force_save="1"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="display_detail_widget" invisible="1" force_save="1" />
            </xpath>

            <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']"
                position="after"
            >
                <widget name="sale_line_detail_widget" width="20px"/>
            </xpath>


            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']"
                   position="attributes">
                <attribute name="context">
                    {'warehouse_id': warehouse_id }
                </attribute>
            </xpath>

        </field>
    </record>
</odoo>

